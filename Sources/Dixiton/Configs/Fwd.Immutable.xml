<?xml version="1.0" encoding="utf-8"?>
<objects xmlns="http://www.springframework.net" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
>

  <!-- Configuration holders -->
  <object name="appConfigPropertyHolder"
      type="Spring.Objects.Factory.Config.PropertyPlaceholderConfigurer, Spring.Core">
    <property name="configSections">
      <value>common-configuration,report-configuration</value>
    </property>
  </object>

  <object id="ISessionStorage" type="Dixiton.NHibernate.NHibernateSessionStorage, Dixiton.DataAccess" singleton="true" autowire="autodetect" />
  
  <object id="ISessionManager" type="Dixiton.DataAccess.NHibernate.SessionManager, Dixiton.DataAccess" singleton="true" autowire="autodetect" />
  
  <!--Automapper configs-->
  <object id="EntityDtoMappings" type="Dixiton.DataAccess.AutomapperMappings.EntityDtoMappings, Dixiton.DataAccess" singleton="true"/>
  
</objects>